<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity"
        android:background="@drawable/covidhelp_background">

    <ImageView
            android:id="@+id/pineLogo"
            android:layout_width="305dp"
            android:layout_height="460dp"
            android:src="@drawable/covid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.302" />

    <TextView
            android:text="From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/pineLogo"
            app:layout_constraintEnd_toEndOf="@+id/pineLogo"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/pineLogo"
            app:layout_constraintVertical_bias="1.0"
            android:fontFamily="@font/droid_sans_mono"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.497"
            android:textSize="12sp" />

    <TextView
            android:text="Dev Tec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/pineLogo"
            app:layout_constraintEnd_toEndOf="@+id/pineLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pineLogo"
            app:layout_constraintVertical_bias="0.911"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:lineSpacingExtra="10sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:typeface="monospace"
            android:fontFamily="@font/droid_sans_mono" />

</androidx.constraintlayout.widget.ConstraintLayout>